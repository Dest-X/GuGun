#!/bin/bash
# üì¶ ‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô BBR + FQ ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡πÅ‡∏•‡∏∞‡πÄ‡∏™‡∏ñ‡∏µ‡∏¢‡∏£‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠

echo "============================"
echo "üöÄ ‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô BBR + FQ"
echo "============================"

# ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤ BBR ‡πÄ‡∏õ‡∏¥‡∏î‡∏≠‡∏¢‡∏π‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
current_bbr=$(sysctl net.ipv4.tcp_congestion_control | awk '{print $3}')
current_fq=$(sysctl net.core.default_qdisc | awk '{print $3}')

echo "üîç tcp_congestion_control = $current_bbr"
echo "üîç default_qdisc = $current_fq"

if [[ "$current_bbr" == "bbr" && "$current_fq" == "fq" ]]; then
    echo "‚úÖ BBR + FQ ‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß"
    exit 0
fi

# ‡πÄ‡∏õ‡∏¥‡∏î BBR + FQ
echo "üëâ ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ñ‡πà‡∏≤‡πÉ‡∏ô /etc/sysctl.conf ..."
cat <<EOF >> /etc/sysctl.conf

# === BBR + FQ Optimize ===
net.core.default_qdisc=fq
net.ipv4.tcp_congestion_control=bbr
EOF

# ‡πÇ‡∏´‡∏•‡∏î config ‡πÉ‡∏´‡∏°‡πà
sysctl -p

# ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå‡∏´‡∏•‡∏±‡∏á‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤
echo "============================"
echo "üìã ‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏´‡∏•‡∏±‡∏á‡πÄ‡∏õ‡∏¥‡∏î:"
sysctl net.ipv4.tcp_congestion_control
sysctl net.core.default_qdisc

# ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤ BBR ‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡πÉ‡∏ô‡πÄ‡∏Ñ‡∏≠‡∏£‡πå‡πÄ‡∏ô‡∏•‡∏ô‡∏µ‡πâ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
if lsmod | grep bbr >/dev/null; then
    echo "‚úÖ BBR ‡πÇ‡∏´‡∏•‡∏î‡πÄ‡∏Ç‡πâ‡∏≤‡πÄ‡∏Ñ‡∏≠‡∏£‡πå‡πÄ‡∏ô‡∏•‡πÅ‡∏•‡πâ‡∏ß"
else
    echo "‚ö†Ô∏è  ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏û‡∏ö‡πÇ‡∏°‡∏î‡∏π‡∏• BBR ‡πÉ‡∏ô‡πÄ‡∏Ñ‡∏≠‡∏£‡πå‡πÄ‡∏ô‡∏•‡∏ô‡∏µ‡πâ (‡∏≠‡∏≤‡∏à‡∏ï‡πâ‡∏≠‡∏á‡∏£‡∏µ‡∏ö‡∏π‡∏ï‡∏´‡∏£‡∏∑‡∏≠‡∏≠‡∏±‡∏û‡πÄ‡∏Å‡∏£‡∏î‡πÄ‡∏Ñ‡∏≠‡∏£‡πå‡πÄ‡∏ô‡∏•)"
fi

echo "üéâ ‡πÄ‡∏™‡∏£‡πá‡∏à‡∏™‡∏¥‡πâ‡∏ô!"
